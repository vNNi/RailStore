<h1 class="text-center">Criar novo <b>Produto!</b></h1>
<div class="container">
    <%= form_for :product, url: "/products" do |form| %>
        <div class="form-group">
            <%= form.label :nome, :for => "product_name" %>
            <%= form.text_field :name, :class => "form-control"%>
            </div>
            <div class="form-group">
            <%= form.label :descrição, :for => "product_description"%>
            <%= form.text_area :description, :class => "form-control", rows: 4%>
        </div>
        <div class="form-group">
            <%= form.label :preço, :for => "product_price"%>
            <%= form.number_field :price, :class => "form-control", step: 0.01%>
        </div>
        <div class="form-group">
            <%= form.label :quantidade, :for => "product_quantity"%>
            <%= form.number_field :quantity, :class => "form-control"%>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                <%= form.submit :cadastrar, :class => "btn btn-primary"%>
            </div>
        </div>
    <% end %>
</div>